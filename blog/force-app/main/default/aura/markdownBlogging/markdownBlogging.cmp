<aura:component implements = "force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access = "global" >
    
    <ltng:require scripts = "{!$Resource.markedJS}" styles = "{!$Resource.markedCSS}"></ltng:require>
                
    <aura:attribute name = "myVal" type = "String" />

    <!--<aura:attribute name="recordId" type="String" />-->

    <aura:handler name = "init" value = "{! this }" action = "{! c.init }"/>
    
    <lightning:card title = "Post Content">
        <lightning:layout>
            <lightning:layoutItem size = "6" padding = "around-small">
                <!--<lightning:input type = "text" value = "{!v.myVal}"  onchange="{!c.onChangeMarkdown}" default = " " placeholder = "Type something interesting"/>
                <h1 class = "slds-m-top_large slds-text-heading_medium"></h1>-->
                <lightning:textarea class="slds-textarea slds-text-font_monospace" default = " " name="myTextArea"  placeholder = "Type something interesting" value = "{!v.myVal}"
                onchange="{!c.onChangeMarkdown}"  rows="20" />
            </lightning:layoutItem>
             <lightning:layoutItem size = "6" padding = "around-small">
                <!--<div aura:id = "output" class = "slds-box editor slds-text-longform">-->
                    <lightning:formattedRichText value = "{!v.myVal}" />
                <!--</div>-->
             </lightning:layoutItem>    
        </lightning:layout>
     </lightning:card>






    
